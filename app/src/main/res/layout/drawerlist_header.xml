<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:weather="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <com.zhixin.myview.RoundImageView
        android:id="@+id/user_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_drawer_login"/>

    <com.zhixin.myview.MyTextView
        android:id="@+id/user_nickname"
        style="@style/TextViewStyle1"
        android:layout_alignBottom="@id/user_icon"
        android:layout_toRightOf="@id/user_icon"
        android:text="登 陆"
        android:textSize="25sp"
        weather:typeface="fonts/hwhk.ttf" />

</RelativeLayout>