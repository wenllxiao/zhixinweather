<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:weather="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <com.zhixin.myview.MyTextView
        android:id="@+id/datetext"
        style="@style/TextViewStyle1"
        android:layout_weight="1"
        android:text="__"
        weather:typeface="fonts/hwhk.ttf" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <com.zhixin.myview.WeatherImageView
            android:id="@+id/forecastday"
            style="@style/TextViewStyle1"
            android:paddingBottom="2dp"/>

        <com.zhixin.myview.WeatherImageView
            android:id="@+id/forecastnight"
            style="@style/TextViewStyle1"
            android:paddingTop="3dp"/>
    </LinearLayout>

    <com.zhixin.myview.MyTextView
        android:id="@+id/temp_low"
        style="@style/TextViewStyle1"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/temp_low"
        android:text="__"
        android:textSize="@dimen/text_Location"
        weather:typeface="fonts/hwhk.ttf" />

    <com.zhixin.myview.MyTextView
        android:id="@+id/temp_height"
        style="@style/TextViewStyle1"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/temp_high"
        android:text="__"
        weather:typeface="fonts/hwhk.ttf" />

</LinearLayout>